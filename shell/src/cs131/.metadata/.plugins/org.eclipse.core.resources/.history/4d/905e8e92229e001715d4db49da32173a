package cs131.pa1.filter.sequential;

import java.io.File;

import cs131.pa1.filter.Message;

public class Ls extends SequentialFilter {
	private final String command;

	public Ls(String command) {
		this.command = command.trim();
	}

	@Override
	public void process() {
		if (!command.equals("ls")) {
			System.out.print(Message.INVALID_PARAMETER.with_parameter(command));
		}
		File folder = new File(SequentialREPL.currentWorkingDirectory);
		File[] listOfFiles = folder.listFiles();
		for (File f : listOfFiles) {
			processLine(f.getName());
		}
	}

	@Override
	protected String processLine(String line) {
		if (!isDone()) {
			output.add(line);
		} else {
			System.out.println(line);
		}
		return "";
	}
	
	@Override
	public boolean isDone() {
		return next == null;
	}

}
